# LLMScope Environment Configuration

# API Settings
API_TITLE=LLMScope API
API_VERSION=1.0.0

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/llmscope

# Redis
REDIS_URL=redis://localhost:6379

# Security
SECRET_KEY=change-me-in-production
API_KEY_HEADER=X-API-Key

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_PERIOD=60

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Workers
ENABLE_WORKERS=true
WORKER_CONCURRENCY=4
