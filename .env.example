# LLMScope Environment Configuration

# API Settings
API_TITLE=LLMScope API
API_VERSION=1.0.0

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/llmscope

# Redis
REDIS_URL=redis://localhost:6379
REDIS_QUEUE_NAME=llmscope:events
REDIS_QUEUE_BATCH_SIZE=100
REDIS_DLQ_NAME=llmscope:events:dlq

# Worker Settings
WORKER_POLL_INTERVAL=0.1
WORKER_MAX_RETRIES=3
WORKER_RETRY_BACKOFF_BASE=2.0

# Security
SECRET_KEY=change-me-in-production
API_KEY_HEADER=X-API-Key

# Single-Tenant Mode (set to false for multi-tenant)
SINGLE_TENANT_MODE=true
REQUIRE_AUTH=true
API_KEY=llmscope-local-key

# Default tenant/project IDs (used in single-tenant mode)
DEFAULT_TENANT_ID=default
DEFAULT_PROJECT_ID=main

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_PERIOD=60

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Workers
ENABLE_WORKERS=true
WORKER_CONCURRENCY=4
